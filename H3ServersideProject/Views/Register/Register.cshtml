                            <div class="form-outline form-white mb-4">
                                <label class="form-label"><b>Name</b></label>
                                @Html.EditorFor(user => user.Name, new { htmlAttributes = new { @class="form-control form-control-lg", placeholder="Enter Name", type="text", name="name"}})
                            </div>
                            <!-- ADDRESS -->
                            <div class="form-outline form-white mb-4">
                                <label class="form-label"><b>Address</b></label>
                                @Html.EditorFor(user => user.Address, new { htmlAttributes = new { type="text", placeholder="Enter Address", name="address",  @class="form-control form-control-lg"}})
                            </div>
                            <!-- PHONE -->
                            <div class="form-outline form-white mb-4">
                                <label class="form-label"><b>Phonenumber</b></label>
