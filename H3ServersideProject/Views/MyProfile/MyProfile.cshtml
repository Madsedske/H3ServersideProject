@model H3ServersideProject.Models.User
@{
    ViewData["Title"] = "MyProfile";
}

<section>
    <div class="container py-5 h-100">
        <!--Color til login - #d86502/#02D8D0 -->
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card text-white" style="border-radius: 1rem; background-color: slategray !important;">
                    <div class="card-body p-5 text-center">
                        <div class="mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Dine oplysninger</h2>
                            <hr>
                            <div class="border-1 border rounded-3 mt-4">
                                <h5 class="card-title border-1 border-bottom">Navn</h5>
                                <p class="card-text">
                                    <b></b> <br>@Html.DisplayFor(model => model.Name)
                                </p>
                            </div>

                            <br />

                            <div class="border-1 border rounded-3">
                                <h5 class="card-title border-1 border-bottom">Adresse</h5>
                                <p class="card-text">
                                    <b></b> <br>@Html.DisplayFor(model => model.Address)
                                </p>
                            </div>

                            <br />

                            <div class="border-1 border rounded-3">
                                <h5 class="card-title border-1 border-bottom">@Html.DisplayNameFor(model => model.Email)</h5>
                                <p class="card-text">
                                    <b></b> <br>@Html.DisplayFor(model => model.Email)
                                </p>
                            </div>

                            <br />

                            <div class="border-1 border rounded-3">
                                <h5 class="card-title border-1 border-bottom">Mobil Nummer</h5>
                                <p class="card-text">
                                    <b></b> <br>@Html.DisplayFor(model => model.PhoneNumber)
                                </p>
                            </div>
                            <br />
                            <h5 class="mt-3"><a class="nav-link text-white" asp-area="" asp-controller="MyProfile" asp-action="GetUserView">Opdater dine oplysninger</a> </h5>
                            <h5><a class="nav-link text-white" asp-area="" asp-controller="MyProfile" asp-action="GetUserView">Se dine billetter</a></h5>
                        </div>      
                        <h5 class="mt-4"><a class="nav-link text-white" asp-area="" asp-controller="MyProfile" asp-action="Logout">Log ud</a></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>