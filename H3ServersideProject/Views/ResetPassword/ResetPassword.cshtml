@model H3ServersideProject.Models.User

@{
    ViewData["Title"] = "ResetPassword";
}
<section>
    <div class="container py-5 h-100">
        <!--Color til login - #d86502/#02D8D0 -->
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card text-white" style="border-radius: 1rem; background-color: slategray !important;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Reset password</h2>
                            <p class="text-white-50 mb-5">Reset your password if you lost it.</p>
                            <hr>
                            <form id="ResetPassword-form">
                               
                                <label class="form-label"><b>Email</b></label>
                                <input id="email" type="email" placeholder="Enter Email" name="eml" class="form-control form-control-lg"><br>

                                <div class="clearfix mb-5">
                                    <button class=" btn btn-outline-light btn-lg px-5" type="submit" id="register-button">Send new password</button>
                                    <br />
                                    <br />
                                    <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Index">Tilbage til login</a>

                                    <!-- <button asp-area="" asp-controller="Login" asp-action="Index" class=" btn btn-outline-light btn-lg px-5">Tilbage til login</button>-->
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#ResetPassword-form").submit(function (event) {
            event.preventDefault();
            
            var formData = {
                password: "password",
                email: $("#email").val()
               };

            $.ajax({
                url: "/ResetPassword/SendPassword",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(formData),
                success: function (result) {
                    console.log(result);
                    window.location.href = "/Login";
                },
                error: function (xhr, textStatus, errorThrown) {
                    console.log("Error: " + errorThrown);
                }
            });
        });
    });
</script>